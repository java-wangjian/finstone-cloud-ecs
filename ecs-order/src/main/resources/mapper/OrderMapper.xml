<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.finstone.order.mapper.OrderMapper">
    <resultMap id="ordersMap" type="com.finstone.order.entity.Orders">
        <id column="id" property="id" />
        <result column="order_no" property="orderNO" />
        <result column="order_status" property="orderStatus" />
        <result column="finish_date" property="finishDate" />
        <result column="delete_date" property="deleteDate" />
        <result column="create_date" property="createDate" />
        <result column="create_user" property="createUser" />
        <result column="update_date" property="updateDate" />
        <result column="update_user" property="updateUser" />
        <result column="amount" property="amount" />
        <result column="" property="" />
        <collection property="orderDetailList" column="create_user" select="orderDetailList" />
    </resultMap>
    <select id="orderDetailList" resultType="com.finstone.order.entity.OrderDetail">
      SELECT * FROM orders_detail
    </select>
</mapper>